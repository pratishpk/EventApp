@model EventManagement.Model.UserInfo

@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center min-vh-80 bg-light">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 500px;background-color:#b5c8da;">
        <h3 class="text-center mb-4">Create an Account</h3>

        <form asp-action="Register" method="post" novalidate>
            <div class="mb-1">
                <label asp-for="EmailId" class="form-label">Email</label>
                <input asp-for="EmailId" class="form-control" style="margin-top: -5px;"/>
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>

            <div class="mb-1">
                <label asp-for="UserName" class="form-label">Username</label>
                <input asp-for="UserName" class="form-control" style="margin-top: -5px;"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-1">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" style="margin-top: -5px;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-1" >
                <label asp-for="Role" class="form-label">Role</label>
                <select asp-for="Role" class="form-select" style="margin-top: -5px;">
                    <option value="">-- Select Role --</option>
                    <option value="Admin">Admin</option>
                    <option value="Participant">Participant</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="d-grid" style="margin-top: 10px;">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>

        <p class="mt-3 text-center">
            Already have an account? <a asp-action="Index" asp-controller="Login">Login here</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
