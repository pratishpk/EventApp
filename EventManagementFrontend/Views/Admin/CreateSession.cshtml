@model EventManagement.Model.SessionInfo

@{
    ViewData["Title"] = "Create Session";
}

<style>
    .form-section {
        background-color: #a7c3df;
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
        padding: 2rem;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
    }

    .form-label {
        font-weight: 600;
    }

    .form-control, .form-select, textarea {
        border-radius: 8px;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #4e5860, #6c7a80);
        color: #fff;
        padding: 1rem 1.5rem;
        border-radius: 10px 10px 0 0;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        font-size: 1rem;
    }

    .btn-primary i {
        margin-right: 0.5rem;
    }

    .btn-secondary {
        border-radius: 8px;
        padding: 0.6rem 1.2rem;
        font-weight: 500;
    }

    .text-danger {
        font-size: 0.85rem;
    }

    .card {
        border: none;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header-custom">
            <h4 class="mb-0">
                <i class="fas fa-chalkboard-teacher me-2"></i> Create New Session
            </h4>
        </div>
        <div class="card-body form-section">
            <form asp-action="CreateSession" method="post" class="needs-validation" novalidate>
                <div class="mb-4">
                    <label asp-for="SessionTitle" class="form-label"></label>
                    <input asp-for="SessionTitle" class="form-control" placeholder="Enter session title" />
                    <span asp-validation-for="SessionTitle" class="text-danger"></span>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="EventId" class="form-label">Event ID</label>
                        <input asp-for="EventId" class="form-control" placeholder="Associated Event ID" />
                        <span asp-validation-for="EventId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="SpeakerId" class="form-label">Speaker ID</label>
                        <input asp-for="SpeakerId" class="form-control" placeholder="Associated Speaker ID" />
                        <span asp-validation-for="SpeakerId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief session description..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="SessionStart" class="form-label">Start Time</label>
                        <input asp-for="SessionStart" class="form-control" type="datetime-local" />
                        <span asp-validation-for="SessionStart" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="SessionEnd" class="form-label">End Time</label>
                        <input asp-for="SessionEnd" class="form-control" type="datetime-local" />
                        <span asp-validation-for="SessionEnd" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="SessionUrl" class="form-label">Session URL</label>
                    <input asp-for="SessionUrl" class="form-control" placeholder="Paste session link (Zoom, Teams, etc.)" />
                    <span asp-validation-for="SessionUrl" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check-circle"></i> Create Session
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
