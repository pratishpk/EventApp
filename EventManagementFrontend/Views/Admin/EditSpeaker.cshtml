@model EventManagement.Model.SpeakersDetails

@{
    ViewData["Title"] = "Edit Speaker";
}

<style>
    .form-section {
        background-color: #a7c3df;
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
        padding: 2rem;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
    }

    .form-label {
        font-weight: 600;
    }

    .form-control {
        border-radius: 8px;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #4e5860, #6c7a80);
        color: #fff;
        padding: 1rem 1.5rem;
        border-radius: 10px 10px 0 0;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        font-size: 1rem;
    }

    .btn-outline-secondary {
        border-radius: 8px;
        padding: 0.6rem 1.5rem;
        font-weight: 500;
        font-size: 1rem;
    }

    .btn-primary i,
    .btn-outline-secondary i {
        margin-right: 0.5rem;
    }

    .text-danger {
        font-size: 0.85rem;
    }

    .card {
        border: none;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header-custom">
            <h4 class="mb-0">
                <i class="fas fa-user-edit me-2"></i> Edit Speaker
            </h4>
        </div>
        <div class="card-body form-section">
            <form asp-action="EditSpeaker" method="post" novalidate>
                <input type="hidden" asp-for="SpeakerId" />

                <div class="mb-4">
                    <label asp-for="SpeakerName" class="form-label">Speaker Name</label>
                    <input asp-for="SpeakerName" class="form-control" placeholder="Enter speaker's name" />
                    <span asp-validation-for="SpeakerName" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary" style="color: white; background-color: gray;">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
