@model IEnumerable<EventManagement.Model.SpeakersDetails>

@{
    ViewData["Title"] = "Speakers";
}

<div class="container mt-4">
    <h2 class="mb-4">Speakers</h2>

    <a href="@Url.Action("CreateSpeaker", "Admin")" class="btn btn-success mb-3">
        <i class="fas fa-plus me-1"></i> Add New Speaker
    </a>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Speaker ID</th>
                <th>Speaker Name</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var speaker in Model)
            {
                <tr>
                    <td>@speaker.SpeakerId</td>
                    <td>@speaker.SpeakerName</td>
                    <td>
                        <a href="@Url.Action("EditSpeaker", "Admin", new { id = speaker.SpeakerId })" class="btn btn-sm btn-primary me-1">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("DeleteSpeaker", "Admin", new { id = speaker.SpeakerId })" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
