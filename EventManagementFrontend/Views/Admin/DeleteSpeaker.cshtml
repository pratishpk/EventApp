@model EventManagement.Model.SpeakersDetails

@{
    ViewData["Title"] = "Delete Speaker";
}


@* CSS styles *@
<style>
    .confirm-wrapper {
        background-color: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
    }

    .card-header-danger {
        background: linear-gradient(135deg, #dc3545, #ff6f61);
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 12px 12px 0 0;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        border-radius: 8px;
        padding: 0.6rem 1.4rem;
    }

    .btn-secondary {
        border-radius: 8px;
        padding: 0.6rem 1.4rem;
    }

    .text-warning-highlight {
        color: #dc3545;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .speaker-name {
        font-size: 1.25rem;
        font-weight: bold;
    }
</style>

@* HTML content for Delete Speaker Page *@

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header-danger">
            <h4 class="mb-0"><i class="fas fa-user-times me-2"></i> Confirm Delete Speaker</h4>
        </div>
        <div class="card-body confirm-wrapper">
            <p class="text-warning-highlight mb-3">
                Are you sure you want to delete this speaker? This action cannot be undone.
            </p>

            <p class="speaker-name text-danger">@Model.SpeakerName</p>

            <form asp-action="DeleteSpeaker" method="post" class="d-flex gap-2 mt-4">
                <input type="hidden" asp-for="SpeakerId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
