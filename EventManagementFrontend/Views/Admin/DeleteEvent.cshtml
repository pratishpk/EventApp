@model EventManagement.Model.EventDetails

@{
    ViewData["Title"] = "Delete Event";
}

<style>
    .confirm-wrapper {
        background-color: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
    }

    .card-header-danger {
        background: linear-gradient(135deg, #dc3545, #ff6f61);
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 12px 12px 0 0;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        border-radius: 8px;
        padding: 0.6rem 1.4rem;
    }

    .btn-secondary {
        border-radius: 8px;
        padding: 0.6rem 1.4rem;
    }

    dl dt {
        font-weight: 600;
    }

    dl dd {
        margin-bottom: 1rem;
    }

    .card {
        border: none;
    }

    .text-warning-highlight {
        color: #dc3545;
        font-weight: 600;
        font-size: 1.15rem;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header-danger">
            <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i> Confirm Delete Event</h4>
        </div>
        <div class="card-body confirm-wrapper">
            <p class="text-warning-highlight mb-4">
                Are you sure you want to delete this event? This action cannot be undone.
            </p>

            <dl class="row">
                <dt class="col-sm-3">Event Name:</dt>
                <dd class="col-sm-9">@Model.EventName</dd>

                <dt class="col-sm-3">Event Date:</dt>
                <dd class="col-sm-9">@Model.EventDate.ToShortDateString()</dd>
            </dl>

            <form asp-action="DeleteEvent" method="post" class="d-flex gap-2 mt-4">
                <input type="hidden" asp-for="EventId" />

                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
